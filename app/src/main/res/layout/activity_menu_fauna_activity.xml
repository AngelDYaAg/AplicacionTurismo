<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".menu_fauna_activity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="410dp"
                android:layout_height="733dp"
                android:background="@drawable/fauna_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/button27"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginTop="212dp"
                android:background="@drawable/fauna_2"
                android:onClick="onclick_aereos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.145"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2" />

            <Button
                android:id="@+id/button28"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginStart="76dp"
                android:layout_marginBottom="52dp"
                android:background="@drawable/fauna_3"
                android:onClick="onclick_terrestres"
                app:layout_constraintBottom_toBottomOf="@+id/button29"
                app:layout_constraintStart_toEndOf="@+id/button29" />

            <Button
                android:id="@+id/button29"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="96dp"
                android:background="@drawable/fauna_4"
                android:onClick="onclick_rastreros"
                app:layout_constraintStart_toStartOf="@+id/button27"
                app:layout_constraintTop_toBottomOf="@+id/button27" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>