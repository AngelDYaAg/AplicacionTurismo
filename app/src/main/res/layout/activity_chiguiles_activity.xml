<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".chiguiles_activity">

    <Button
        android:id="@+id/btningrediente2"
        android:layout_width="302dp"
        android:layout_height="63dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/ingredientes"
        android:onClick="onclick_chigui_ingre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView32" />

    <Button
        android:id="@+id/btnvalornutrional2"
        android:layout_width="302dp"
        android:layout_height="63dp"
        android:background="@drawable/valor_nutricional"
        android:onClick="onclick_chingui_valor"
        app:layout_constraintEnd_toEndOf="@+id/btningrediente2"
        app:layout_constraintStart_toStartOf="@+id/btningrediente2"
        app:layout_constraintTop_toBottomOf="@+id/btningrediente2" />

    <Button
        android:id="@+id/btncomollegar2"
        android:layout_width="302dp"
        android:layout_height="63dp"
        android:background="@drawable/como_llegar"
        app:layout_constraintEnd_toEndOf="@+id/btnvalornutrional2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnvalornutrional2"
        app:layout_constraintTop_toBottomOf="@+id/btnvalornutrional2" />

    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/chiguiles" />
</androidx.constraintlayout.widget.ConstraintLayout>